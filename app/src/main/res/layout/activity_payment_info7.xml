<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF387D"
    tools:context=".PaymentInfoActivity7">

    <TextView
        android:id="@+id/titleTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Enter payment details ðŸ’°"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Choose payment method ðŸ¤‘"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- RadioGroup for selecting payment method -->

    <!-- Card details input fields (initially hidden) -->
    <RadioGroup
        android:id="@+id/paymentMethodRadioGroup"
        android:layout_width="143dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView3">

        <!-- RadioButton for Credit Card -->

        <!-- RadioButton for Debit Card -->
        <RadioButton
            android:id="@+id/radioCreditCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Card ðŸ’³"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/radioDebitCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debit Card ðŸ’³"
            android:textColor="@color/white" />

        <!-- RadioButton for Apple Pay -->
        <RadioButton
            android:id="@+id/radioApplePay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple Pay ðŸŽ"
            android:textColor="@color/white" />

        <!-- RadioButton for Google Pay -->
        <RadioButton
            android:id="@+id/radioGooglePay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Pay ðŸ…–"
            android:textColor="@color/white" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/cardDetailsLayout"
        android:layout_width="37dp"
        android:layout_height="23dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/cardNumberEditText"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Card Number"
            android:inputType="text" />

        <EditText
            android:id="@+id/expiryDateEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Expiry Date (MM/YY)"
            android:inputType="text" />
    </LinearLayout>

    <Button
        android:id="@+id/submitButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="143dp"
        android:backgroundTint="@color/white"
        android:text="Checkout ðŸ›’ âž¡"
        android:textColor="#BF387D"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
